.options savecurrents

.include General_Circuit.cir

.op

.end

.control

*makes plots in color
set hcopypscolor=0
set color0=white
set color1=black
set color2=red
set color3=blue
set color4=violet
set color5=rgb:3/8/0
set color6=rgb:4/0/0

* op analysis
op
print all

print v(coll)-v(base)
print v(coll)

echo "SIM_DC_TAB"
print v(coll)-v(base)
print v(coll)
echo "SIM_DC_END"

* time analysis
tran 1e-5 1e-2
hardcopy trans.ps v(out) v(in)
echo trans_FIG

* frequency analysis
ac dec 10 10 100MEG

hardcopy amp.ps abs(v(out))
echo amp_FIG

hardcopy ampdb.ps vdb(out) vecmax(vdb(out))-3
echo ampdb_FIG

hardcopy phdb.ps vp(out)
echo phdb_FIG

let Zin =  v(in2)[40]/(v(in)[40]-v(in2)[40])*100
echo "SIM_ZIN_TAB"

*input impedance in kohm
print Zin

echo "SIM_ZIN_END"


let lower_bond 	= vecmax(vdb(out))-3
let amplitude		= abs(vecmax(v(out)))

meas ac f1 WHEN vdb(out)=lower_bond RISE=1
meas ac f2 WHEN vdb(out)=lower_bond CROSS=LAST

let merit		= vecmax(abs(v(out))) * (f2 - f1) / (f1 * 1891.526)

print merit

echo "SIM_RESULTS_TAB"

print amplitude
print f2 - f1
print merit

echo "SIM_RESULTS_END"


quit
.endc

.end

